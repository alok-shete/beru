{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "beru": ["./src/index.ts"],
      "beru/persistence": ["./src/middleware/persistence/index.ts"],
      "beru/devtools": ["./src/middleware/devtools/index.ts"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "typeRoots": [
    "./@types",
    "./node_modules/@types"
  ]
}